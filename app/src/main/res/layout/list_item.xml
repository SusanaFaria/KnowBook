<?xml version="1.0" encoding="utf-8"?><!-- Layout for a single list item in the list of pets -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/scrollViewPadding"
    android:background="@drawable/edit_text_design"
    android:descendantFocusability="beforeDescendants"
    android:orientation="horizontal"
    android:padding="@dimen/general_layout_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            style="@style/textView_style"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/name_txtView"
            tools:text="My Book" />

        <TextView
            android:id="@+id/summary"
            style="@style/textView_style"
            android:textColor="@color/name_txtView"
            android:textSize="@dimen/text_size_general"
            tools:text="I wrote it" />

        <TextView
            android:id="@+id/quantity_display"
            style="@style/textView_style"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/quantity_txtView"
            tools:text="In Stock: 12" />


        <TextView
            android:id="@+id/price_display"
            style="@style/textView_style"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/quantity_txtView"
            tools:text="12 â‚¬" />
    </LinearLayout>

    <Button
        android:id="@+id/sale_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_states"
        android:focusable="false"
        android:text="@string/sale_btn" />

</LinearLayout>